   "source": [
    "# Exercício 3\n",
    "## Peça a idade do usuário em anos e converta para dias (desconsidere anos bissextos).\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "id": "cb99a64d",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Sua idade é de 36 anos, equivale a 13140 dias\n"
     ]
    }
   ],
   "source": [
    "dias_ano = 365\n",
    "\n",
    "idade = int(input(\"Digite a sua idade: \"))\n",
    "\n",
    "dias = dias_ano * idade\n",
    "\n",
    "print(f\"Sua idade é de {idade} anos, equivale a {dias} dias\")\n",
    "\n"
   ]
  }
